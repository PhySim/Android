<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aspirephile.physim.SceneCreator$PlaceholderFragment" >

    <TextView
        android:id="@+id/tv_scene_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scene_creator_name_title" />

    <EditText
        android:id="@+id/et_scene_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <CheckBox
        android:id="@+id/cb_bounded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scene_creator_bounded_title" />

</LinearLayout>